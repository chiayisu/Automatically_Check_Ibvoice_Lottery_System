

@{
    ViewData["Title"] = "Index";
}

<h2>對獎號碼</h2>
<form asp-controller="LotteryNumber" asp-action="Index" method="get">
    <!--Title: <input type="text" name="date">-->
    <div class="form-row">
        <div class="form-group col-md-2">
            <label for="inputEmail4">年份</label>
            <input type="text" class="form-control" id="inputEmail4" placeholder="年份" name="year">
        </div>
        <div class="form-group col-md-2">
            <label for="inputEmail4">月份</label>
            <input type="text" class="form-control" id="inputPassword4" placeholder="月份" name="month"><p>
        </div>
        <br />
    </div>
    <p>
        <button type="submit" class="btn btn-primary">送出</button>
        <br />
        <br />

</form>
