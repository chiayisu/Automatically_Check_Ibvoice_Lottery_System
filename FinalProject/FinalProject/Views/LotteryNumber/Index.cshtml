            <tr>
                <td>
                    <h3>增開六獎</h3>
                </td>
                <td>
                    @if (@ViewBag.AdditionSixthPrizes != null)
                    {
                        @foreach (var AdditionSixthPrize in @ViewBag.AdditionSixthPrizes)
                        {
                            <h3>@AdditionSixthPrize</h3>
                        }
                    }
                </td>
            </tr>

        </tbody>
    </table>
